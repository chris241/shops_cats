
 <%= form_tag url_for(action: 'create'), method: "post" do %>


    <center><%= label_tag 'title' %></center>
    <center><%= text_field  'title', @item.title %></center>
    <br /> <br />



    <center><%= label_tag 'description' %></center>
    <center><%= text_field 'description', @item.description %></center>
    <br /> <br />


    <center><%= label_tag 'price' %></center>
    <center><%= text_field 'price', @item.price %></center>
    <br /> <br />
    <center><%= label_tag 'image_url' %></center>
    <center><%= text_area_tag 'image_url', @item.image_url%></center>
     <br /> <br />
     <center><%= submit_tag "Create item" %></center>

<% end %>
