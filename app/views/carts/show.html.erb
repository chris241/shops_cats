<body id="show-pannier"> 
  <h1 id="title-table">Les articles dans votre panier:</h1>
  <table class="table">
      <thead >
        <tr>
          <th >Produits</th>
          <th >Prix</th>
          <th></th>
        </tr>
      </thead>
      
    <tbody>
        <% @tab.each do |tab| %>
            <tr>
              <td><%=tab.title %></td>
              <td><%=tab.price%></td>
              <td>
                <%= link_to "Enlever du panier",cart_path(@cart.id) ,method: :delete , class: "btn btn-outline-warning" , style: "width:auto"%>
              </td>
            </tr>
        <%end%>

        <tr id="total">
          <td >Prix total</td>
          <td ><%=@count.to_f%> â‚¬</td>
          <td>
            <script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                    data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
                    data-description="Paiement"
                    data-amount="500"
                    data-currency="eur"
                    data-locale="auto"></script>
            <%= link_to "Passer Commande", orders_path, class:"btn btn-success", method: :POST, style: "width:auto"%>
          </td>
        </tr>

        <div class="nbr_count">
          <%=session[:nbr] %>
        </div>

    </tbody>
  </table>
</body>