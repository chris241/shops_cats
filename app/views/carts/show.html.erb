<h1>Voici les articles dans ton panier:</h1>
<table class="table">
 <thead class="thead-dark">
   <tr>
   
     <th scope="col">Produits</th>
     <th scope="col">Prix</th>
     <th scope="col"></th>
   </tr>
 </thead>
 <tbody>
   <% @tab.each do |tab| %> 
   <th scope="row">  </th>
   <tr>
     
    <td><%=tab.title %></td>
     <td><%=tab.price%></td>
     <td><%=@count%></td>
      <td>
      <%= link_to "delete",cart_path(@cart.id) ,method: :delete , class: "btn btn-warning"%>
    </td>
   </tr>
   <%end%>
 </tbody>

</table>
